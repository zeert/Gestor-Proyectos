<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:paddingLeft="1dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Proyecto"
        android:id="@+id/textView"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Nombre Proyecto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Criterio / Importancia"
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:orientation="horizontal"
        android:paddingLeft="120dp">
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:checked="true"
            android:text="Tiempo"
            android:id="@+id/tiempo_proyecto" />
        <RadioButton
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:checked="false"
            android:text="Costo"
            android:id="@+id/costo_proyecto" />
        </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Proveedor"
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textStyle="bold" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proveedor 1"
        android:id="@+id/checkBox"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proveedor 2"
        android:id="@+id/checkBox2"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proveedor 3"
        android:id="@+id/checkBox3"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proveedor 4"
        android:id="@+id/checkBox4"
        android:checked="false" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proveedor 5"
        android:id="@+id/checkBox5"
        android:checked="false" />
    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:drawable/bottom_bar"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01">

        <Button
            android:id="@+id/btn_nuevo_rol"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="OK"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/btn_edit_rol"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Tareas"
            android:layout_weight="1.0" />
        <Button
            android:id="@+id/btn_elim_rol"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Forma"
            android:layout_weight="1.0" />
        <Button
            android:id="@+id/btn_elim_rol"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Reporte"
            android:layout_weight="1.0" />

    </LinearLayout>
</LinearLayout>
