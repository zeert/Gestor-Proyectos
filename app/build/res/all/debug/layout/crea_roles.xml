<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text=""
        android:id="@+id/textView2" />

    N<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Nuevo Rol"
        android:id="@+id/textView"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nom_rol"
        android:layout_gravity="center_horizontal"
        android:hint="Nombre Rol" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_gravity="center_horizontal"
        android:inputType="numberSigned"
        android:numeric="integer|signed"
        android:hint="$ Costo Diario" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tiempo / Complejidad"
        android:id="@+id/textView3"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/complex_alta"
        android:layout_gravity="center_horizontal"
        android:hint="% Alta" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/complex_media"
        android:layout_gravity="center_horizontal"
        android:hint="% Media" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/complex_baja"
        android:layout_gravity="center_horizontal"
        android:hint="% Baja" />

    <LinearLayout
        android:orientation="horizontal"
        android:background="@android:drawable/bottom_bar"
        android:paddingLeft="4.0dip"
        android:paddingTop="5.0dip"
        android:paddingRight="4.0dip"
        android:paddingBottom="1.0dip"
        android:layout_width="fill_parent" android:layout_height="wrap_content"
        android:layout_below="@+id/TextView01">

        <Button
            android:id="@+id/btn_nuevo_rol"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Nuevo"
            android:layout_weight="1.0" />

        <Button
            android:id="@+id/btn_edit_rol"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Editar"
            android:layout_weight="1.0" />
        <Button
            android:id="@+id/btn_elim_rol"
            android:layout_width="0.0dip" android:layout_height="fill_parent"
            android:text="Eliminar"
            android:layout_weight="1.0" />

    </LinearLayout>


</LinearLayout>
